{
    "manifest_version": 2,

    "name":        "Мутко",
    "description": "Самый простой переводчик слов",
    "version":     "1.1337.0",

    "permissions": ["contextMenus", "tabs", "activeTab"],

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js":      ["mutko.js"]
    }],

    "background": {
    	"scripts": ["hot-reload.js", "background.js"]
  	}
}